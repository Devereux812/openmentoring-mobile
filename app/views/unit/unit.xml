<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo" actionBarHidden="true">
  <DockLayout stretchLastChild="true">
    <DockLayout stretchLastChild="true" dock="left">
      <Button dock="top" text="X" class="docked-button" />
      <Label dock="bottom" text="" height="50" />
      <Button verticalAlign="center" horizontal-align="center" height="50" text="<" />
    </DockLayout>
    <DockLayout stretchLastChild="true" dock="right">
      <Button verticalAlign="center" horizontal-align="center" height="50" text="r" />
    </DockLayout>
    <ScrollView class="card-container">
      <Repeater items="{{ cardItems }}">
        <Repeater.itemsLayout>
          <StackLayout orientation="horizontal" />
        </Repeater.itemsLayout>
        <Repeater.itemTemplate>
          <HtmlView html="{{ htmlString }}" class="card" />
        </Repeater.itemTemplate>
      </Repeater>
    </ScrollView>
  </DockLayout>
</Page>
