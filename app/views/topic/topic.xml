<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo">
  <Page.actionBar>
    <ActionBar title="Topic">
      <ActionBar.actionItems>
        <ActionItem text="Back" tap="buttonBackTap"  ios.position="left"/>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <StackLayout>
    <ListView items="{{ unitItems }}" itemTap="listViewItemTap">
      <ListView.itemTemplate>
         <Label text="{{ title }}" textWrap="true" class="unit-label" />
      </ListView.itemTemplate>
   </ListView>
  </StackLayout>
</Page>
